{
  "name": "worker-man",
  "version": "1.0.1",
  "description": "A better & simple API to consume worker thread in node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -b --clean && tsc",
    "lint": "eslint src/**",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "init": "eslint --init"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aromalanil/worker-man.git"
  },
  "keywords": [
    "worker-thread",
    "thread",
    "asynchronous"
  ],
  "author": "Aromal Anil <aromalanilkannan@gmail.com> (https://aromalanil.in)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aromalanil/worker-man/issues"
  },
  "homepage": "https://github.com/aromalanil/worker-man#readme",
  "devDependencies": {
    "@types/node": "^18.14.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.{tsx,ts,js,jsx}": [
      "eslint src --fix",
      "prettier src --write"
    ]
  }
}
